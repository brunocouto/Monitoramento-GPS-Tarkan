# Ambiente
NODE_ENV=development
PORT=3000
HOST=localhost

# Banco de dados MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=tarkan_gps
DB_TIMEZONE=America/Sao_Paulo

# JSON Web Token
JWT_SECRET=tarkan-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Integração com Traccar
TRACCAR_ENABLED=true
TRACCAR_API_URL=http://localhost:8082/api
TRACCAR_USER=admin
TRACCAR_PASSWORD=admin
TRACCAR_SYNC_INTERVAL=300000

# Configurações de e-mail
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=email@exemplo.com
EMAIL_PASSWORD=sua_senha
EMAIL_FROM=noreply@tarkan.com.br

# Geocodificação
GEOCODING_ENABLED=false
GEOCODING_PROVIDER=google
GEOCODING_API_KEY=sua_chave_api
GEOCODING_CACHE_TIME=604800

# Notificações
NOTIFICATION_THROTTLE_TIME=300000

# Segurança
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=1800
REQUIRE_STRONG_PASSWORD=true
SESSION_EXPIRE=86400

# API
API_MAX_PAGE_SIZE=1000
API_DEFAULT_PAGE_SIZE=50
API_BASE_PATH=/api
API_VERSION=v1
API_ALLOW_CORS=true
API_RATE_LIMIT=100