# Configurações gerais
NODE_ENV=development
PORT=3000
HOST=localhost
BODY_LIMIT=100kb
CORS_ORIGIN=*

# Servidor de protocolo GPS
PROTOCOL_PORT=5023
PROTOCOL_BUFFER_SIZE=1024
PROTOCOL_TIMEOUT=60000

# Banco de dados
DB_HOST=localhost
DB_PORT=3306
DB_NAME=traccar_db
DB_USER=root
DB_PASSWORD=root
DB_SYNC=false

# JWT
JWT_SECRET=sua-chave-secreta-deve-ser-alterada-em-producao
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Email para notificações
